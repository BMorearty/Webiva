<div class='cms_form'>

<% paragraph_options_form_for "Blog Entry Detail","entry_detail",@options do |f| %>
    <%= f.select :blog_id, @blogs, :label => 'Blog to Display' %>
    <%= f.select :list_page_id, [ ['--Select List Page--','' ]] + SiteNode.page_options %>
    <%= f.select :include_in_path, [["Don't include path in target",nil],
                                    ["Include Blog ID in detail path","blog_id"],
                                    ["Include Target ID in detail path","target_id"]] %>
    
<% end -%>

</div>
