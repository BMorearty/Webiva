<div class='admin_content'>
<% admin_form_for :content_type, @content_type do |f| -%>
  <%= f.label_field :content_name %>
  <% if @content_type.editable? -%>
    <%= f.page_selector :list_site_node_id, :label => 'List Page' %>
    <%= f.page_selector :detail_site_node_id, :label => 'Detail Page' %>
  <% else -%>
    <%= f.custom_field :none, :label => '', :value => 'This is a system content type' %>
  <% end -%>
  <%= f.radio_buttons :search_results, [ ['Yes'.t,true],['No'.t,false]], :label => 'Include in search results' %>
  <%= f.cancel_submit_buttons 'Cancel','Edit' %>
<% end -%>
</div>
